<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <TextView
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vraag Enquete"
        android:id="@+id/txtVraag"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:textAlignment="center"
        android:textColor="#e3000b"
        android:textSize="25dp"
        android:textStyle="bold"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radio2"
        android:layout_marginTop="10dp" />

    <RadioButton
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 1"
        android:id="@+id/radio1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:checked="false"
        android:textSize="20dp"
        android:textColor="#e3000b"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/txtVraag"
        android:layout_toStartOf="@+id/btnOK" />

    <RadioButton
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 2"
        android:id="@+id/radio2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:checked="false"
        android:textSize="20dp"
        android:textColor="#e3000b"
        android:layout_alignTop="@+id/radio1"
        android:layout_alignStart="@+id/txtTip"
        android:layout_marginStart="46dp" />

    <RadioButton
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 3"
        android:id="@+id/radio3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:checked="false"
        android:textSize="20dp"
        android:textColor="#e3000b"
        android:layout_alignTop="@+id/radio2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/btnOK"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TIP: een tip hier"
        android:id="@+id/txtTip"
        android:textColor="#e3000b"
        android:layout_marginStart="23dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btnOK"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/radio2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>