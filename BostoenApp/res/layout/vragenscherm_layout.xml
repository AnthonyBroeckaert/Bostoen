<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="#e3000b">

    <TextView
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vraag Enquete"
        android:id="@+id/txtVraag"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginTop="29dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radio2"
        android:textStyle="bold"
        android:enabled="true" />

    <RadioButton
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 1"
        android:id="@+id/radio1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:checked="false"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="62dp"
        android:textSize="20dp"
        android:layout_above="@+id/radio2"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <RadioButton
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 2"
        android:id="@+id/radio2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:checked="false"
        android:layout_marginBottom="38dp"
        android:textSize="20dp"
        android:layout_above="@+id/radio3"
        android:layout_alignEnd="@+id/radio1"
        android:textColor="#ffffff" />

    <RadioButton
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="Antwoord 3"
        android:id="@+id/radio3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/radio2"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TIP"
        android:id="@+id/txtTip"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:textColor="#ffffff" />
</RelativeLayout>